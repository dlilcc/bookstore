{% extends 'admin.html.twig' %}

{% block title %}Hello AuthorController!{% endblock %}

{% block body %}
  <div className="page-heading pb-2 mt-4 mb-2 ">
                    <h3>Manager</h3> <a href="{{path('author_create')}}"><button type="button" class="btn btn-outline-primary">Insert</button></a>
                </div>
                <div class="page-content">
                <div class="btn-group" role="group" aria-label="Basic outlined example">
               
                </div>
                <div class="card">
                    <div class="container mb-3">
                        <div class="table-responsive text-nowrap">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                          {% for a in authors %}
                              <tr>
                                  <td>{{ a.id}}</td>
                                  <td>{{ a.name}}</td>
                                  <td>{{ a.email}}</td>
                                  <td>
                                    <a href="{{path('author_edit',{'id':a.id})}}">Edit</a>
                                  <a href="{{path('author_delete',{'id':a.id})}}">Delete</a></td>
                              </tr>
                          {% endfor %}
                          
                        </tbody>
                      </table>
                    </div>
                </div>
                </div>
                </div>
{% endblock %}
